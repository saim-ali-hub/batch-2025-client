#!/bin/bash

# Ensure the eval script exists and can be sourced
if [ ! -f .eval-script-2025 ]; then
    echo "Error: eval-script-2025 file not found!"
    exit 1
fi

if ! source .eval-script-2025 2>/dev/null; then
    echo "Error: Cannot source eval-script-2025"
    exit 1
fi

while true; do
    read -p "Please select question (all or 1-5 or q to quit): " question
    question=$(echo "$question" | tr '[:upper:]' '[:lower:]')
    echo ""

    case "$question" in
        1) check_pw ;;
        2) check_IP ;;
        3) 
            check_webimage25 
            check_webimage
            ;;
        4) 
            check_container25
            check_myweb
            check_pdf_file_conversion
            ;;
        5) check_repos ;;
        q) break ;;
        *) echo "You did not select a valid question number." ;;
    esac
done
